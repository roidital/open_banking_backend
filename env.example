# Flask settings
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=false

# Firebase settings
FIREBASE_DATABASE_URL=https://roidbudgetapp-default-rtdb.firebaseio.com
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# Your existing bank-scraper-service URL
SCRAPER_SERVICE_URL=https://your-scraper-service-url.com

# Encryption key for credentials (generate with: python encryption.py)
# This should be a base64-encoded 32-byte key
ENCRYPTION_KEY=your-base64-encoded-32-byte-key

# Scheduler secret for authenticating scheduled job requests
SCHEDULER_SECRET=your-scheduler-secret-here

# Port (optional, defaults to 8080)
PORT=8080

